<!--        android:text="@string/title_question_fragment" />    -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/question"
        tools:text="@{QuestionAnswer.question}"/>

</FrameLayout>
</layout>